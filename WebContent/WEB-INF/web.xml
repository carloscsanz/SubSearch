<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>YouTubeApp</display-name>
	<context-param>
		<param-name>autor</param-name>
		<param-value>Carlos Contreras Sanz</param-value>
	</context-param>
	
	<servlet>
		<servlet-name>ServletController</servlet-name>
		<servlet-class>es.youtubeapp.servlet.ServletController</servlet-class>
	</servlet>
	
	<welcome-file-list>
		<welcome-file>Inicio.input</welcome-file>
	</welcome-file-list>

	<servlet-mapping>
		<servlet-name>ServletController</servlet-name>
		<url-pattern>*.input</url-pattern>
	</servlet-mapping>

</web-app>